<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <h1>Edit <%=product.name%></h1>
        <div class="edit-container">
            <div class="edit-form">
                <form
                    action="/products/<%=product.id%>?_method=PUT"
                    method="POST"
                >
                    Name:
                    <input
                        type="text"
                        name="name"
                        value="<%=product.name%>"
                    /><br />
                    Description:
                    <input
                        type="text"
                        name="description"
                        value="<%=product.description%>"
                    /><br />
                    Img URL:
                    <input
                        type="text"
                        name="img"
                        value="<%=product.img%>"
                    /><br />
                    Price:
                    <input
                        type="number"
                        name="price"
                        value="<%=product.price%>"
                        min="1"
                    /><br />
                    Qty:
                    <input
                        type="number"
                        name="qty"
                        value="<%=product.qty%>"
                        min="0"
                    /><br />
                    <input type="submit" name="" value="Submit Changes" />
                </form>
                <a href="/products"><button id="home-btn">Home</button></a>
            </div>
        </div>
    </body>
</html>
